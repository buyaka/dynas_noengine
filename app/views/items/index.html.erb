<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Box</th>
      <th>Name</th>
      <th>Type</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.box_id %></td>
        <td><%= item.name %></td>
        <td><%= item.type %></td>
        <td><%= item.note %></td>
        <td><%= link_to 'Show', box_item_path(@box, @item) %></td>
        <td><%= link_to 'Edit', edit_box_item_path(@box, item) %></td>
        <td><%= link_to 'Destroy', [@box, item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_box_item_path(@box) %>
